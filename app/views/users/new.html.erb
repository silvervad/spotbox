<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <p>

  <%= f.label :email %>
  <%= f.email_field :email %>
  
  <p>

  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <p>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
  
  <p>

  <%= f.submit "Create my account", class: "button" %>
<% end %>
