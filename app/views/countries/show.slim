- provide(:title, @country.name)

#nav-bar.nav-bar.no-select
  = link_to root_path
    #button-home.button-no-bg.navi-button.icon-home title="Home"
    
  //#button-toggle-menu.navicon-button.x.menu-open title="Close Menu"
    .navicon

  = link_to root_path
    #button-up.button-no-bg.navi-button.icon-undo2 title="Up"
  
  #button-center-map.button-no-bg.navi-button.icon-target title="Center"
  #button-toggle-info.button-no-bg.navi-button.icon-circle-up title="Close Info"
  
  #button-toggle-nav.button-no-bg.navi-button.icon-circle-right title="Close Navigation"

  #nav-text.no-select
    =link_to @country.name, @country
    

#info-bar.nano

  .nano-content
    
    .info-title Spots  
    ul.info-partial = render partial: "layouts/spot_short", collection: @country.spots.order('name')

    br
    br
    
    -if logged_in?
      =link_to 'New Spot', new_country_spot_path(@country)
      
    p
      
    -if logged_in? 
      =current_user.name
      =link_to "  Log out", logout_path, method: "delete"
      

  
